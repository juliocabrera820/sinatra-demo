<div class="container col-md-4 mt-5">
  <div class="row">
    <div class="col">
      <form action="/auth/sign_up" method="POST">  
        <div class="form-group mt-3">
          <label class="form-label">Nombre</label>
          <input type="text" name="name" class="form-control" placeholder="Ingresar nombre">
        </div>
        <div class="form-group mt-3">
          <label class="form-label">Correo</label>
          <input type="text" name="email" class="form-control" placeholder="Ingresar correo">
        </div>
        <div class="form-group mt-3">
          <label class="form-label">Password</label>
          <input type="password" name="password" class="form-control" placeholder="Ingresar password">
        </div>
        <button class="btn btn-primary mt-4 btn-block" type="submit">Crear</button>
      </form>
    </div>
  </div>
</div>